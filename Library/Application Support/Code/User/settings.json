// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "input mono",
  "editor.fontSize": 12,
  "editor.lineHeight": 16,
  "editor.lineNumbers": true,
  "editor.glyphMargin": true,
  "editor.rulers": [120, 140],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.roundedSelection": true,
  "editor.scrollBeyondLastLine": true,
  "editor.wrappingColumn": 300,
  "editor.wrappingIndent": "indent",
  "editor.mouseWheelScrollSensitivity": 1.5,
  "editor.quickSuggestions": true,
  "editor.quickSuggestionsDelay": 10,
  "editor.autoClosingBrackets": true,
  "editor.formatOnType": false,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": true,
  "editor.selectionHighlight": true,
  "editor.overviewRulerLanes": 3,
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line",
  "editor.fontLigatures": true,
  "editor.hideCursorInOverviewRuler": false,
  "editor.renderWhitespace": true,
  "editor.referenceInfos": true,
  "editor.folding": false,

  "diffEditor.renderSideBySide": true,
  "diffEditor.ignoreTrimWhitespace": true,

  "window.openFilesInNewWindow": true,
  "window.reopenFolders": "all",
  "window.zoomLevel": 0,

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "node_modules": false
  },
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "off",
  "files.autoSaveDelay": 1000,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },

  "explorer.workingFiles.maxVisible": 9,
  "explorer.workingFiles.dynamicHeight": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },

  "update.channel": "default",

  "git.enabled": true,
  "git.path": "/usr/local/bin/git",
  "git.autofetch": true,

  "css.validate": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.vendorPrefix": "warning",
  "css.lint.duplicateProperties": "warning",
  "css.lint.emptyRules": "warning",
  "css.lint.importStatement": "warning",
  "css.lint.boxModel": "ignore",
  "css.lint.universalSelector": "warning",
  "css.lint.zeroUnits": "warning",
  "css.lint.fontFaceProperties": "warning",
  "css.lint.hexColorLength": "error",
  "css.lint.argumentsInColorFunction": "error",
  "css.lint.unknownProperties": "warning",
  "css.lint.ieHack": "warning",
  "css.lint.unknownVendorSpecificProperties": "warning",
  "css.lint.propertyIgnoredDueToDisplay": "warning",
  "css.lint.important": "warning",
  "css.lint.float": "ignore",
  "css.lint.idSelector": "warning",

  "json.schemas": [],

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  "markdown.styles": [],

  "html.format.wrapLineLength": 120,
  "html.format.unformatted": null,
  "html.format.indentInnerHtml": true,
  "html.format.preserveNewLines": true,
  "html.format.maxPreserveNewLines": 1,
  "html.format.indentHandlebars": false,
  "html.format.endWithNewline": true,
  "html.format.extraLiners": null,

  "less.validate": true,
  "less.lint.compatibleVendorPrefixes": "warning",
  "less.lint.vendorPrefix": "warning",
  "less.lint.duplicateProperties": "warning",
  "less.lint.emptyRules": "warning",
  "less.lint.importStatement": "warning",
  "less.lint.boxModel": "ignore",
  "less.lint.universalSelector": "warning",
  "less.lint.zeroUnits": "warning",
  "less.lint.fontFaceProperties": "warning",
  "less.lint.hexColorLength": "error",
  "less.lint.argumentsInColorFunction": "error",
  "less.lint.unknownProperties": "warning",
  "less.lint.ieHack": "warning",
  "less.lint.unknownVendorSpecificProperties": "warning",
  "less.lint.propertyIgnoredDueToDisplay": "warning",
  "less.lint.important": "warning",
  "less.lint.float": "ignore",
  "less.lint.idSelector": "warning",

  "sass.validate": true,
  "sass.lint.compatibleVendorPrefixes": "warning",
  "sass.lint.vendorPrefix": "warning",
  "sass.lint.duplicateProperties": "warning",
  "sass.lint.emptyRules": "warning",
  "sass.lint.importStatement": "warning",
  "sass.lint.boxModel": "ignore",
  "sass.lint.universalSelector": "warning",
  "sass.lint.zeroUnits": "warning",
  "sass.lint.fontFaceProperties": "warning",
  "sass.lint.hexColorLength": "error",
  "sass.lint.argumentsInColorFunction": "error",
  "sass.lint.unknownProperties": "warning",
  "sass.lint.ieHack": "warning",
  "sass.lint.unknownVendorSpecificProperties": "warning",
  "sass.lint.propertyIgnoredDueToDisplay": "warning",
  "sass.lint.important": "warning",
  "sass.lint.float": "ignore",
  "sass.lint.idSelector": "warning",

  "gitHistory.displayLabel": "${name} <${email}> on ${date}",
  "gitHistory.displayDescription": "${message}",

  "esQuotes.defaultQuote": "'",

  "stylelint.enable": false,
  "stylelint.config": {},
  "stylelint.configOverrides": {},

  "npm.runInTerminal": true,
  "npm.includeDirectories": [],
  "npm.useRootDirectory": true,

  "htmlhint.enable": true,
  "htmlhint.options": {},

  "tslint.enable": true,
  "tslint.rulesDirectory": "",
  "tslint.validateWithDefaultConfig": false,
  "tslint.configFile": "",
  "tslint.ignoreDefinitionFiles": false,
  "tslint.exclude": "",

  "python.pythonPath": "python",
  "python.devOptions": [],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pep8Enabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.lintOnTextChange": true,
  "python.linting.lintOnSave": true,
  "python.linting.maxNumberOfProblems": 100,
  "python.linting.pylintCategorySeverity.convention": "Hint",
  "python.linting.pylintCategorySeverity.refactor": "Hint",
  "python.linting.pylintCategorySeverity.warning": "Warning",
  "python.linting.pylintCategorySeverity.error": "Error",
  "python.linting.pylintCategorySeverity.fatal": "Error",
  "python.linting.pylintPath": "pylint",
  "python.linting.pep8Path": "pep8",
  "python.linting.flake8Path": "flake8",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "autopep8",
  "python.formatting.yapfPath": "yapf",
  "python.autoComplete.extraPaths": [],
  "python.unitTest.nosetestsEnabled": false,
  "python.unitTest.nosetestPath": "nosetests",
  "python.unitTest.unittestEnabled": true,

  "php.validate.enable": true,
  "php.validate.executablePath": null,
  "php.validate.run": "onSave",

  "eslint.enable": true,
  "eslint.options": {},

  "typescript.tsdk": null,
  "typescript.useCodeSnippetsOnMethodSuggest": true,
  "typescript.validate.enable": true,
  "typescript.format.insertSpaceAfterCommaDelimiter": true,
  "typescript.format.insertSpaceAfterSemicolonInForStatements": true,
  "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
  "typescript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,

  "javascript.validate.enable": true,
  "javascript.format.insertSpaceAfterCommaDelimiter": true,
  "javascript.format.insertSpaceAfterSemicolonInForStatements": true,
  "javascript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
  "javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": false,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": false
}