[core]
	editor = nano -w
	autocrlf = input
	excludesfile = /Users/brett/.gitignore_global

[user]
	name = Brett Epps
	email =

[push]
	default = simple

[diff]
	tool = bc3

[difftool]
	prompt = false
	bc3 = trustExitCode

[merge]
	tool = bc3
	conflictstyle = diff3

[mergetool]
	prompt = false
	bc3 = trustExitCode

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true

[include]
	path = ~/.gitconfig.user

